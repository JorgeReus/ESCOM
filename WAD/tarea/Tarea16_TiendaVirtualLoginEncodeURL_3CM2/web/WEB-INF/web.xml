<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletElectronicos</servlet-name>
        <servlet-class>applicacion.ServletElectronicos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletCarrito</servlet-name>
        <servlet-class>applicacion.ServletCarrito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletRopa</servlet-name>
        <servlet-class>applicacion.ServletRopa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletElectrodomesticos</servlet-name>
        <servlet-class>applicacion.ServletElectrodomesticos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>applicacion.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletFailure</servlet-name>
        <servlet-class>applicacion.ServletFailure</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletElectronicos</servlet-name>
        <url-pattern>/ServletElectronicos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCarrito</servlet-name>
        <url-pattern>/ServletCarrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletRopa</servlet-name>
        <url-pattern>/ServletRopa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletElectrodomesticos</servlet-name>
        <url-pattern>/ServletElectrodomesticos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/ServletLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletFailure</servlet-name>
        <url-pattern>/ServletFailure</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
