<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/proyecto</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password"/>
<!--    <property name="show_sql">true</property>-->
    
    <mapping class="entity.UserType"/>
    <mapping class="entity.User"/>
    <mapping class="entity.ActivityType"/>
    <mapping class="entity.Activity"/>
    <mapping class="entity.Subject"/>
    <mapping class="entity.ImageCategory"/>
    <mapping class="entity.ImageType"/>
    <mapping class="entity.Image"/>
    <mapping class="entity.Video"/>
    <mapping class="entity.Sound"/>
    <mapping class="entity.Question"/>
    <mapping class="entity.Group"/>
    <mapping class="entity.Answer"/>
  </session-factory>
</hibernate-configuration>
